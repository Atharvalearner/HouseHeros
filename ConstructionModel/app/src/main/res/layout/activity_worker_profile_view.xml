<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Worker_Profile_View">

        <TextView
            android:id="@+id/welcome_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="welcome"
            android:textColor="@color/black"
            android:textSize="24dp" />

    <ImageView
        android:id="@+id/vp_image"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="45dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/baseline_person_add_24"
        />

    <LinearLayout
        android:id="@+id/lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@id/vp_image">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="NAME :"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingStart="18dp"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/vp_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:hint="Name"
            android:textColorHint="@color/black"
            android:padding="6dp"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loccupation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@id/lname">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Occupation :"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:paddingStart="18dp"
            />

        <TextView
            android:id="@+id/vp_occupation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:hint="Occupation"
            android:textColorHint="@color/black"
            android:padding="6dp"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/laddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@id/loccupation">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="Address :"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:paddingStart="18dp"
            />

        <TextView
            android:id="@+id/vp_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:hint="Address"
            android:textColorHint="@color/black"
            android:padding="6dp"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lcontact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@id/laddress">

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Contact No. :"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:paddingStart="18dp"
            />

        <TextView
            android:id="@+id/vp_contactNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:hint="Contact Number"
            android:textColorHint="@color/black"
            android:padding="6dp"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@id/lcontact">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="Email :"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:paddingStart="18dp"
            />

        <TextView
            android:id="@+id/vp_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:hint="Email"
            android:textColorHint="@color/black"
            android:padding="6dp"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lexperience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@id/lemail">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Work Experience :"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:paddingStart="18dp"
            />

        <TextView
            android:id="@+id/vp_experience"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:hint="Experience"
            android:textColorHint="@color/black"
            android:padding="6dp"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lshopaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@id/lexperience">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Office / Shop address :"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:paddingStart="18dp"
            />

        <TextView
            android:id="@+id/vp_shop_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:hint="Office/shop Address"
            android:textColorHint="@color/black"
            android:padding="6dp"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/laddimages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lshopaddress"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vp_testimonal"
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/baseline_upload_file_24" />
    </LinearLayout>
</RelativeLayout>